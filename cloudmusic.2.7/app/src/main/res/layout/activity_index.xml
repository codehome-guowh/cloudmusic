<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:id="@+id/lt_index_outer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lt_index_daohang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/pink">
            <ImageButton
                android:id="@+id/btn_index_menu"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="toggle"

                ></ImageButton>

            <RadioGroup
                android:id="@+id/rg_tab_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="15"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <RadioButton
                android:id="@+id/rb_index_mine"
                    style="@style/RadioButton"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="我的" />
                <RadioButton
                android:id="@+id/rb_index_finds"
                    style="@style/RadioButton"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"    />
                <RadioButton
                android:id="@+id/rb_index_friends"
                    style="@style/RadioButton"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="朋友" />
                <RadioButton
                android:id="@+id/rb_index_video"
                    style="@style/RadioButton"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频" />
            </RadioGroup>
            <ImageView
                android:id="@+id/iView_index_search"
                android:layout_gravity="center_vertical"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp">
            </ImageView>
        </LinearLayout>


        <!--侧滑框-->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15">

        </androidx.viewpager.widget.ViewPager>


        <!--        底层播放栏-->

        <RelativeLayout
            android:id="@+id/lt_mine_play"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/pink"
            android:orientation="horizontal">
            <com.example.cloudmusic.views.CircleView
                android:id="@+id/imageview_mine_songimagesmall"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
            </com.example.cloudmusic.views.CircleView>
            <TextView
                android:id="@+id/text_mine_songname"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:text="铃声"
                android:layout_toRightOf="@+id/imageview_mine_songimagesmall">
            </TextView>
            <TextView
                android:id="@+id/text_mine_lyric"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:text="未知"
                android:layout_toRightOf="@+id/imageview_mine_songimagesmall"
                android:layout_below="@+id/text_mine_songname">
            </TextView>
            <ImageButton
                android:id="@+id/imagebutton_mine_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@+id/imageview_newadd"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
            </ImageButton>
            <ImageView
                android:id="@+id/imageview_newadd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="12.5dp"
                android:src="@drawable/new_menu"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
            </ImageView>
        </RelativeLayout>

    </LinearLayout>

          <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_noclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="@color/pink"
            android:orientation="vertical">
            <com.example.cloudmusic.views.CircleView
                android:id="@+id/imageview_mine_user_head"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal">
            </com.example.cloudmusic.views.CircleView>
            <TextView

                android:id="@+id/text_mine_userinfo"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp">
            </TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imageview_icon_first"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/news"
                        ></ImageView>
                    <TextView
                        android:text="我的消息"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageview_icon_first"
                        android:textSize="10dp"
                        android:gravity="center"></TextView>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imageview_icon_second"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/friend"
                        ></ImageView>
                    <TextView
                        android:text="我的好友"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageview_icon_second"
                        android:textSize="10dp"
                        android:gravity="center"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imageview_icon_third"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/skin"
                        ></ImageView>
                    <TextView
                        android:text="个性换肤"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imageview_icon_third"
                        android:textSize="10dp"
                        android:gravity="center"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imageview_icon_forth"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/micro"
                        ></ImageView>
                    <TextView
                        android:text="听歌识曲"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="10dp"
                        android:layout_below="@+id/imageview_icon_forth"
                        android:gravity="center"></TextView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/first"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/tickets"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="演出"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/first">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/second"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/shop"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="商城"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/second">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/third"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/peoplenear"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="附近的人"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/third">
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/forth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/sounds"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="口袋彩铃"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/forth">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/fifth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/orders"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="我的订单"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/fifth">
                </TextView>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                ></ImageView>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/sixth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/timeup"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="定时停止播放"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/sixth">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/seventh"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/scan"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="扫一扫"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/seventh">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/eigth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/musicclock"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="音乐闹钟"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/eigth">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/ninth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/storage"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="音乐云盘"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/ninth">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/tenth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/onlineplay"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="在线听歌免流量"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/tenth">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/eleventh"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/game"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="游戏推荐"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/eleventh">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/tweveth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/tickets"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="优惠券"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/tweveth">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                    android:id="@+id/thirteenth"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/join"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:text="加入网易音乐人"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/thirteenth">
                </TextView>
            </RelativeLayout>











        </LinearLayout>
        </ScrollView>


    </LinearLayout>

      </androidx.drawerlayout.widget.DrawerLayout>







