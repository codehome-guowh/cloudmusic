<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlayActivity"
    android:orientation="vertical"
    android:background="@drawable/timg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <com.example.cloudmusic.views.CircleView
            android:id="@+id/imageview_song_bighead"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/head8">
        </com.example.cloudmusic.views.CircleView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/text_currenttime"
            android:layout_width="10dp"
            android:layout_weight="3"
            android:layout_height="15dp"
            android:text="00:00"
            android:textSize="10dp"
            android:gravity="center">
        </TextView>
            <ProgressBar
                android:id="@+id/progress_horizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="25"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal">
            </ProgressBar>
        <TextView
            android:id="@+id/text_totaltime"
            android:layout_width="10dp"
            android:layout_weight="3"
            android:layout_height="15dp"
            android:text="4:32"
            android:textSize="10dp"
            android:gravity="center">
        </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/imageview_play_pre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="75dp"
                android:src="@drawable/up"></ImageView>
            <ImageView
                android:id="@+id/imageview_play_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:background="@drawable/play"></ImageView>
            <ImageView
                android:id="@+id/imageview_play_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/next"></ImageView>
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>